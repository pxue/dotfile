[core]
	editor = vim -u NONE
	excludesfile = /Users/500px/.gitignore_global
[user]
	name = Paul Xue
[push]
	default = current
[url "git@github.com:"]
    insteadOf = https://github.com/

[alias]
    up = !git fetch && git pull --rebase --prune $@
    undo = reset HEAD^ --mixed
    amend = commit -a --amend
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
    logs = !git log --oneline --abbrev-commit
[merge]
	tool = kdiff3
