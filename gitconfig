[core]
	excludesfile = /Users/paulxue/.gitignore_global
[push]
	default = current
[url "git@github.com:"]
    insteadOf = https://github.com/

[alias]
    up = !git stash && git fetch && git pull --rebase --prune $@ && git stash pop
    undo = reset HEAD^ --mixed
    amend = commit -a --amend
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
    db = !git branch --merged | egrep -v \"(^\\*|master|dev)\" | xargs git branch -d
    logs = !git log --oneline --abbrev-commit
    ca = !git commit -am
    c = !git commit -m
    st = !git status
    co = checkout
    ri = !git rebase -i `git merge-base master HEAD`
    r2 = !git rebase -i HEAD~2
    b = !git rev-parse --abbrev-ref HEAD

[color "status"]
    added = green
    changed = yellow
    untracked = normal

[merge]
	tool = kdiff3
[rerere]
	enabled = true
[http]
	cookiefile = /Users/paulxue/.gitcookies
[user]
	name = Paul Xue
	email = xuepaul.xp@gmail.com
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
