[core]
	editor = vim -u NONE
	excludesfile = /Users/pxue/.gitignore_global
[user]
    name = "Paul Xue"
    email = "paul.xue@pressly.com"
[push]
	default = current
[url "git@github.com:"]
    insteadOf = https://github.com/

[alias]
    up = !git stash && git fetch && git pull --rebase --prune $@ && git stash pop
    undo = reset HEAD^ --mixed
    amend = commit -a --amend
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
    db = !git branch --merged master | grep -v master | xargs git branch -d
    logs = !git log --oneline --abbrev-commit
    ca = !git commit -am
    c = !git commit -m
    st = !git status
    co = checkout
[merge]
	tool = kdiff3
