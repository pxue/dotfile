# Navigations & Listings
alias ll="ls -alhG"
alias ..="cd .."
alias l="ls -lG"
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias tree="find . \! -path \"*/.git*\" -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"

# Utility
alias speedtest="curl http://speedtest.wdc01.softlayer.com/downloads/test10.zip > /dev/null"
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
# Flush Directory Service cache
alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"
# Clean up LaunchServices to remove duplicates in the “Open With” menu
alias lscleanup="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"
# HTTP Sniffer
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Apple’s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# Show/hide hidden filess in Finder
alias showdot="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hidedot="defaults write com.apple.finder AppleShowAllFiles -bool false && # killall Finder"

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Time functions
alias unixt=unixt
alias getutc=getutc

# Github
alias gitb="git rev-parse --abbrev-ref HEAD | pbcopy"
alias gitr2="git rebase -i HEAD~2"
alias upall="find . -type d -follow -depth 1 -exec git --git-dir={}/.git --work-tree={} fetch && git --git-dir={}/.git --work-tree={} remote prune origin \;"

function unixt()
{
    date +%s && date +%s | pbcopy
};

function getutc()
{
    date -u -j -f "%s" $1
}

function cds() {
    cd "$@" && ll;
}

function b64() {
    echo -n $1 | openssl base64;
}
